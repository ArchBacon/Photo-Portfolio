<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <meta name="theme-color" content="#ffffff">
    <title>Website | {% block title %}Welcome!{% endblock %}</title>
    <link rel="apple-touch-icon" sizes="144x144" href="{{ asset('image/apple-touch-icon.png') }}">
    <link rel="icon" type="image/png" sizes="32x32" href="{{ asset('image/favicon-32x32.png') }}">
    <link rel="icon" type="image/png" sizes="16x16" href="{{ asset('image/favicon-16x16.png') }}">
    <link rel="manifest" href="{{ asset('image/site.webmanifest') }}">
    <link rel="mask-icon" href="{{ asset('image/safari-pinned-tab.svg') }}" color="#5bbad5">
    {% block stylesheets %}
        {{ encore_entry_link_tags('app') }}
    {% endblock %}

    {% block javascripts %}
        {{ encore_entry_script_tags('app') }}
        <script src="{{ asset('feather.min.js') }}"></script>
    {% endblock %}
</head>
<body id="body" class="bg-black font-montserrat text-white text-opacity-50 flex flex-col relative min-h-screen pb-28 overflow-x-hidden overflow-y-auto">
    <div id="overlay" class="fixed z-10 bg-black opacity-0 h-screen w-screen pointer-events-none ease-out duration-500 transition-opacity cursor-pointer"></div>
    {% block header %}
        {% include 'shared/header.html.twig' %}
    {% endblock %}

    {% block body %}{% endblock %}

    {% block footer %}
        {% include 'shared/footer.html.twig' %}
    {% endblock %}

    <button id="up" class="fixed bottom-8 right-8 h-12 w-12 rounded flex justify-center items-center border-2 border-neutral-500 text-neutral-500 group bg-[#1E293B] mix-blend-difference">
        <i class="group-hover:animate-bounce mix-blend-exclusion" data-feather="chevrons-up"></i>
    </button>
    <script>
        feather.replace()
    </script>
</body>
</html>
