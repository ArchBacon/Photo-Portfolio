{% extends 'base.html.twig' %}

{% block title %}Contact{% endblock %}

{% block body %}
    <div class="uppercase text-center font-bold mt-12 mb-8 md:mb-24 md:mt-28">
        <h2>How to find me</h2>
        <hr>
        <h1 class="text-4xl">Contact Me</h1>
    </div>

    <main class="max-w-5xl m-auto px-4 my-8
            md:flex md:flex-row">
        <div class="mb-16 md:w-1/2">
            <h3 class="hidden md:block text-3xl mb-5 w-full uppercase">
                <span class="text-xs block">Who am i?</span>
                <span class="text-white font-bold block">About me</span>
            </h3>

            <p class="text-center md:text-left">{{ lipsum(300) }}</p>
        </div>

        <section class="mt-8 md:w-1/2">
            {{ form_start(form) }}
            {{ form_widget(form._token) }}

            <div class="lg:flex lg:flex-row">
                <div class="lg:w-full lg:mr-2.5">
                    {{ form_errors(form.name) }}
                    {{ form_widget(form.name) }}
                    {{ form_help(form.name) }}
                </div>

                <div class="lg:w-full lg:ml-2.5">
                    {{ form_errors(form.email) }}
                    {{ form_widget(form.email) }}
                    {{ form_help(form.email) }}
                </div>
            </div>

            <div>
                {{ form_errors(form.content) }}
                {{ form_widget(form.content) }}
                {{ form_help(form.content) }}
            </div>

            <div class="flex justify-center lg:justify-end">
                {{ form_widget(form.submit) }}
            </div>

            {{ form_end(form, {render_rest: false}) }}
        </section>
    </main>

    <footer class="mt-4 mb-8 px-4 flex flex-col text-center w-full
            md:absolute md:bottom-0 md:flex-row md:mb-0 md:justify-between">
        <div class="flex flex-row justify-center mb-8">
            <a href="#" class="hover:text-white mx-5"><i data-feather="facebook"></i></a>
            <a href="#" class="hover:text-white mx-5"><i data-feather="twitter"></i></a>
            <a href="#" class="hover:text-white mx-5"><i data-feather="instagram"></i></a>
            <a href="#" class="hover:text-white mx-5"><i data-feather="youtube"></i></a>
        </div>

        <p class="uppercase font-bold">Copyright &copy; 2020. <span class="inline-block">All Rights Reserved.</span></p>
    </footer>
{% endblock %}
